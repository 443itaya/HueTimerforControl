<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:gravity="center"
            android:textColor="#40C4FF"
            android:textSize="120dp"
            android:text="15:00" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_01" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:text="Start"
            android:textSize="30dp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_15" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:id="@+id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="01:00"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintEnd_toStartOf="@+id/button_05"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/demo_button"
            app:layout_constraintBottom_toBottomOf="@+id/button_05" app:layout_constraintTop_toBottomOf="@+id/timer"/>
    <Button
            android:id="@+id/button_05"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:text="05:00"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_01"
            app:layout_constraintBottom_toTopOf="@+id/clear_button" app:layout_constraintTop_toBottomOf="@+id/timer"
            android:layout_marginBottom="8dp"/>
    <Button
            android:id="@+id/demo_button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="7"
            android:layout_row="0"
            android:text="デモ用"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintEnd_toStartOf="@+id/button_01"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_01"
            app:layout_constraintTop_toBottomOf="@+id/timer"/>
    <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="4"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:text="Clear"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/button_15"
            app:layout_constraintEnd_toStartOf="@+id/button_15"/>
    <Button
            android:id="@+id/button_15"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="5"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:text="15:00"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintBottom_toBottomOf="@+id/button_10"
            app:layout_constraintEnd_toStartOf="@+id/button_10"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/clear_button"/>
    <Button
            android:id="@+id/button_10"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="6"
            android:layout_row="0"
            android:text="10:00"
            android:textSize="30dp" android:onClick="onButtonClick"
            app:layout_constraintBottom_toTopOf="@+id/start_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button_15"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>